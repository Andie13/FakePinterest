<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andieperrault.fakepinterest.PinDetailActivity">

    <ImageView
        android:id="@+id/imageDetails"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:adjustViewBounds="true"
        app:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/titleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="titleTextview" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userId"
        android:layout_below="@+id/imageDetails"
        android:layout_marginTop="25dp"
        android:text="dateTextView" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userId"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descTextView"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_alignStart="@+id/imageDetails"
                android:layout_below="@+id/userId"
                android:text="descTextView" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageDetails"
        android:layout_below="@+id/dateTextView"
        android:layout_marginTop="14dp"
        android:text="userId" />

</RelativeLayout>
